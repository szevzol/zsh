#" vim:syntax=zsh

# for easier cleartool access
alias ct=cleartool

# edit config spec
alias edcs='/usr/atria/bin/cleartool edcs'

# starting tmux
alias tmux='tmux -2'

# listing tmux sessions
alias tls='tmux ls'

# shortcut to start vim
alias v=vim 

# set clearcase view
svfnc()
{
    /usr/atria/bin/cleartool setview `whoami`_$1
}

alias sv=svfnc

alias grep='grep --color=auto'

alias ls='ls $LS_OPTIONS'

# source private alias file
PRIVATE_FILE="$ZSH_HOME/rc/alias.private"
test -s $PRIVATE_FILE && . $PRIVATE_FILE || true 
